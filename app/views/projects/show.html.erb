<div class="container">
  <div class="row text-center">

    <div class="page-header">
      <h3 class="text-center"><%= @project.title %></h3>
    </div>

    <div class="col-md-4">
      <strong>Project Title: </strong> <%= @project.title %>
    </div>

    <div class="col-md-4">
      <strong>Project Highlights: </strong><%= @project.details %>
    </div>

    <div class="col-md-4">
      <strong>Deadline: </strong><%= @project.deadline %>
    </div>

  </div>
  <div class="col-md-10 col-md-offset-1">
    <h3 class="text-center">Attachments</h3>
    <%= render 'attachments/list', attachments: @project.attachments %>

    <div class="col-md-6 col-md-offset-3 text-center">
      <%= link_to 'Add Project Members', users_tenant_project_path(tenant_id: @project.tenant_id, id: @project.id), class: 'edit-btn' %>
      <%= link_to t('.destroy', default: t("helpers.links.destroy")), tenant_project_path(@project, tenant_id: @project.tenant_id), method: 'delete', data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'delete-btn' %>
    </div>

    <div class="col-md-12">
      <%= link_to '< Back to Home - Team', root_path, class: 'btn btn-primary'  %>
    </div>

  </div>
</div>