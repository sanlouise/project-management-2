<div class="container">
  <div class="row text-center project-show">
    <div class="page-header col-md-4 col-md-offset-4">
    <%= link_to 'Back to Home', root_path, class: 'btn btn-default btn-block tf-btn color'  %>
      <h3 class="text-center"><%= @project.title %></h3>
    </div>

    <div class="col-md-12">
      <strong>Deadline: </strong><%= @project.deadline %>
    </div>

    <div class="col-md-12 highlights">
      <strong>Project Highlights: </strong><%= @project.details %>
    </div>
  </div>

  <div class="col-md-10 col-md-offset-1">
    <h3 class="text-center">Attachments</h3>
    <%= render 'attachments/list', attachments: @project.attachments %>
    <div class="col-md-6 col-md-offset-3 text-center">
      <%= link_to 'Add Project Members', users_tenant_project_path(tenant_id: @project.tenant_id, id: @project.id), class: 'edit-btn' %>

      <%= link_to "Delete Project", tenant_project_path(@project, tenant_id: @project.tenant_id), method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: 'delete-btn' %>

    </div>
  </div>
</div>