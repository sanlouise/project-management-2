<%- model_class = Project -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% if @projects.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:details) %></th>
        <th><%= model_class.human_attribute_name(:deadline) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.title, 
                  tenant_project_path(project, tenant_id: @tenant.id), class: 'main-link' %></td>
          <td><%= project.details %></td>
          <td><%= project.deadline %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="lead">You did not add any projects yet.</p>
<% end %>

<% if (@tenant.can_create_projects?) %>
  <%= link_to 'Add a New Project', new_tenant_project_path(tenant_id: @tenant.id), 
            class: 'btn btn-default btn-block tf-btn color' %>
<% end %>