<% if current_user %>
  <div class="col-md-8 col-md-offset-2 home-user">
    <h3 class="text-center home-user">Team: <%= @tenant.name %></h3>
    <hr>
    <%= render 'projects/list' %>
  </div>
<% else %>

  <div id="tf-sliders">
    <div id="header-slider" class="carousel layout-two"">
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag("pgmt.jpg") %>
          <div class="carousel-caption text-center">
          	<div class="homepage-text">Welcome to HappyData</span>
            <br>
            <br>

            <div id="vlamorous-content">
              <div class="container">
                <div class="row">

                <div class="col-md-4 col-sm-4"> 
                    <div class="post-block">
                      <h3 class="media-heading">Free</h3>
                      <div class="post-detail text-center">

                        <ul class="homepage-plan-listing">
                          <li>Unlimited file uploads</li>
                          <li>5 projects</li>
                          <li>Access anywhere, anytime</li>
                        </ul>
                        
                      </div>
                      
                      <div class="row">
                        <div class="col-col-md-10 col-sm-12 col-xs-12">
                          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default btn-block tf-btn color' %>
                        </div>
                      </div>
                    </div>
                  </div>

                <div class="col-md-4 col-md-offset-2 col-sm-4">
                  <div class="post-block">
                    <h3 class="media-heading">
                      Premium
                    </h3>
                    <div class="post-detail text-center">

                      <ul class="homepage-plan-listing">
                        <li>Unlimited file uploads</li>
                        <li>Unlimited projects</li>
                        <li>Access anywhere, anytime</li>
                      </ul>
                      
                    </div>
                    
                    <div class="row">
                      <div class="col-col-md-10 col-sm-12 col-xs-12">
                        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default btn-block tf-btn color' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div> 
<% end %>
