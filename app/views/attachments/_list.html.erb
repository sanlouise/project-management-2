<table class="table table-striped">
  <thead>
    <tr>
      <th>Name of Attachment</th>
      <th>Link to Attachment</th>
      <th>Created At:</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% attachments.each do |attachment| %>
      <tr>
        <td><%= link_to attachment.name, attachment_path(attachment) %></td>
        <td><%= s3_link Tenant.current_tenant_id, attachment.key %></td>
        <td><%= attachment.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to "Delete", attachment_path(attachment), method: :delete, data: { confirm: "Are you sure you want to delete this attachment?" }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Attachment', new_attachment_path(project_id: @project.id), class: 'btn btn-default btn-block tf-btn color' %>